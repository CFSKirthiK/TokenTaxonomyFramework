{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include" : [
    "src/**/*",
    "node_modules/**/*"
  ],
  "exclude" : [
    "node_modules/@babel",
    "node_modules/core-js",
    "node_modules/loglevel",
    "node_modules/rxjs",
    "node_modules/uri-js"
  ]
}