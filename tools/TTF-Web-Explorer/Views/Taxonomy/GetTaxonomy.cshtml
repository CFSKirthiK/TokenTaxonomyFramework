        <p>Symbol: @Html.Raw(behavior.Artifact.ArtifactSymbol.VisualSymbol)</p>
        <p>Name: @behavior.Artifact.Name</p>
        <p>@Html.ActionLink("Details", "GetBaseToken", "BaseToken", new {symbol =behavior.Artifact.ArtifactSymbol.ToolingSymbol}, null)</p>
    </li>                                                                                     
}

