@using TTI.TTF.Taxonomy.Model.Artifact
@using TTI.TTF.WebExplorer.Controllers
@model TTI.TTF.Taxonomy.Model.Taxonomy

@{
    ViewBag.Title = "Token Taxonomy Framework";
    Layout = "_Layout";
}

<h2>Artifacts</h2>

<h3>Token Bases</h3> 


@foreach (var baseToken in Model.BaseTokenTypes.Values)
{
    <h4>Symbol: @Html.Raw(baseToken.Artifact.ArtifactSymbol.VisualSymbol)</h4>
    <p>Name: @baseToken.Artifact.Name</p>
    <p>@Html.ActionLink("Details", "GetBaseToken", "BaseToken", new {symbol =baseToken.Artifact.ArtifactSymbol.ToolingSymbol}, null)</p>
}

<h3>Behaviors</h3> 

